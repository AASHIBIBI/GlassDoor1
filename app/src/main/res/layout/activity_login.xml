<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:padding="20dp">

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/meet_clients_you_re_excited_to_work_with_and_grow_your_independent_career_or_business"
        android:src="@drawable/pic2"
        app:layout_constraintBottom_toTopOf="@+id/welcome_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:text="What's your email?"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="With a Glassdoor account, you can save and \n       apply for join our community."
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="Email"
        android:textColor="@color/white"
        android:gravity="start"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:layout_marginTop="200dp"
        android:backgroundTint=""
        android:text="What's Next"
        android:textColor="#FFFFFF" />
</RelativeLayout>